<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar"> <!-- Base.Theme.AppCompat.Light.DarkActionBar -->
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.TFG_RFID" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Set AppCompat’s actionBarStyle -->
        <item name="actionBarStyle">@style/MyDarkToolbarStyle</item>

        <!-- Set AppCompat’s color theming attrs -->
        <item name="colorPrimary">@color/holo_red_dark</item>
        <item name="colorPrimaryDark">@color/red_dark</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:textColorSecondary">@color/abc_primary_text_disable_only_material_dark</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style>


    <style name="MyDarkToolbarStyle" parent="Theme.AppCompat">
        <item name="android:background">@color/orange</item>


        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>

    </style>


    <style name="GalaxyZooThemeToolbarDarkOverflow" parent="Theme.AppCompat.NoActionBar">

        <item name="android:textColorPrimary">@color/abc_primary_text_material_light</item>


        <item name="actionMenuTextColor">@color/abc_primary_text_material_light</item>
        <!-- android:textColorSecondary is the color of the menu
             overflow icon (three vertical dots) -->
        <item name="android:textColorSecondary">@color/abc_secondary_text_material_light</item>

        <!-- This would set the toolbar's background color,
              but setting this also changes the popup menu's background,
              even if we define popupTheme for our <Toolbar> -->
        <!-- <item name="android:background">@color/color_primary</item> -->
    </style>


    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="MyThemeNoTitle" parent="Theme.TFG_RFID">
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="UiTestTextView">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">50sp</item>

    </style>


    <style name="MyEditTextstyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <style name="MyEditTextstyle2">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">6dp</item>
    </style>
    <style name="MyEditTextstyle3">
        <item name="android:textColorPrimary">@color/blue_grey_600</item>
        <item name="android:textColorPrimaryInverse">@color/blue_grey_600</item>
        <item name="android:textColorSecondary">@color/blue_grey_600</item>
        <item name="android:textColorHint">@color/blue_grey_600</item>
        <item name="colorAccent">@color/blue_grey_600</item>

    </style>

</resources>
